<h1 align="center">Showing Recipes for - <%= @search_term %></h1>
<h3 align="center">Developed by Sravya Chelikani</h3>

<% if @recipes.nil? %>

<p>No recipes found with relevant information... Sorry</p>

<% else %>

<table border="1" align="center">
	<tr>
		<th>Image</th>
		<th>Title</th>
		<th>Social Rank</th>
	</tr>
	<% @recipes.each do |recipe| %>
		<tr class=<%= cycle('even', 'odd') %>>
			<td><%= link_to image_tag(recipe["image_url"], size: '100'), recipe["source_url"] %></td>
			<td><%= link_to sanitize(recipe["title"]), recipe["source_url"] %></td>
			<td><%= recipe["social_rank"] %></td>
		</tr>
	<% end %>
</table>

<% end %>